<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sortify.controller.PlayerBarController"
            styleClass="player-bar" prefHeight="90">
    <left>
        <VBox spacing="4">
            <Label fx:id="nowLabel" text="No song" styleClass="now-playing"/>
            <Label fx:id="timeLabel" text="0:00 / 0:00" styleClass="time-label"/>
        </VBox>
    </left>

    <center>
        <HBox alignment="CENTER" spacing="12">
            <Button fx:id="prevBtn" text="⏮" onAction="#prev" styleClass="icon-btn"/>
            <Button fx:id="playPauseBtn" text="▶" onAction="#toggle" styleClass="primary-btn round"/>
            <Button fx:id="nextBtn" text="⏭" onAction="#next" styleClass="icon-btn"/>
        </HBox>
    </center>

    <right>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Vol" styleClass="time-label" />
            <Slider fx:id="vol" prefWidth="140"/>
        </HBox>
    </right>

</BorderPane>
