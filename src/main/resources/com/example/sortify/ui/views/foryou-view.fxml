<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sortify.controller.ForYouController"
      spacing="12" styleClass="content">
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="For You" styleClass="section-title"/>
        <Button text="Generate" onAction="#generate" styleClass="primary-btn"/>
    </HBox>
    <Label text="Your bespoke purple mix" styleClass="muted"/>
    <ListView fx:id="suggested" VBox.vgrow="ALWAYS" styleClass="list"/>
    <HBox alignment="CENTER_RIGHT">
        <Button text="Save Mix" onAction="#save" styleClass="secondary-btn"/>
    </HBox>
</VBox>
