<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sortify.controller.ForYouController"
      spacing="14" styleClass="view">
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="For You" styleClass="view-title"/>
        <Label text="Smart pulls based on your spins" styleClass="muted"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Generate" onAction="#generate" styleClass="primary-btn"/>
        <Button text="Save to Playlist" onAction="#save" styleClass="ghost-btn"/>
    </HBox>

    <TableView fx:id="suggested" styleClass="glass" prefHeight="520">
        <columns>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="300"/>
            <TableColumn fx:id="colArtist" text="Artist" prefWidth="250"/>
            <TableColumn fx:id="colAlbum" text="Album" prefWidth="240"/>
        </columns>
    </TableView>
</VBox>
