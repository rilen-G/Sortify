<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sortify.controller.LibraryController"
      spacing="12" styleClass="content">
    <Label text="All Songs" styleClass="section-title"/>
    <TableView fx:id="table" VBox.vgrow="ALWAYS" styleClass="table">
        <columns>
            <TableColumn fx:id="colNum" text="#" prefWidth="40"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="220"/>
            <TableColumn fx:id="colArtist" text="Artist" prefWidth="180"/>
            <TableColumn fx:id="colAlbum" text="Album" prefWidth="180"/>
            <TableColumn fx:id="colGenre" text="Genre" prefWidth="120"/>
            <TableColumn fx:id="colDuration" text="Duration" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button text="Add to Queue" onAction="#addToQueue" styleClass="primary-btn"/>
        <Button text="Add to Playlist" onAction="#addToPlaylist" styleClass="secondary-btn"/>
    </HBox>
</VBox>
