<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sortify.controller.LibraryController"
      spacing="16" styleClass="view">
    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label text="Library" styleClass="view-title"/>
    </HBox>

    <TableView fx:id="table" styleClass="glass">
        <columns>
            <TableColumn fx:id="colNum" text="#" prefWidth="50"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
            <TableColumn fx:id="colArtist" text="Artist" prefWidth="180"/>
            <TableColumn fx:id="colAlbum" text="Album" prefWidth="180"/>
            <TableColumn fx:id="colGenre" text="Genre" prefWidth="120"/>
            <TableColumn fx:id="colDuration" text="Duration" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Add to Queue" onAction="#addToQueue" styleClass="primary-btn"/>
        <Button text="Add to Playlist" onAction="#addToPlaylist" styleClass="ghost-btn"/>
    </HBox>
</VBox>
