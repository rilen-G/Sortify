<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sortify.controller.PlaylistController"
      spacing="14" styleClass="view">
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label fx:id="plTitle" text="Playlist" styleClass="view-title"/>
        <Button text="Rename" onAction="#rename" styleClass="ghost-btn"/>
        <Button text="Play All" onAction="#playAll" styleClass="primary-btn"/>
        <ToggleButton fx:id="shuffleBtn" text="ðŸ”€ Shuffle" onAction="#toggleShuffle" styleClass="ghost-btn"/>
    </HBox>

    <TableView fx:id="trackList" styleClass="glass" prefHeight="500">
        <columns>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="300"/>
            <TableColumn fx:id="colArtist" text="Artist" prefWidth="250"/>
            <TableColumn fx:id="colAlbum" text="Album" prefWidth="240"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button text="Move Up" onAction="#moveUp" styleClass="ghost-btn"/>
        <Button text="Move Down" onAction="#moveDown" styleClass="ghost-btn"/>
        <Button text="Remove Selected" onAction="#remove" styleClass="ghost-btn"/>
    </HBox>
</VBox>
